pipeline {
    agent any

    tools {
        maven 'Maven 3.9.9' // Same name as configured in Jenkins
    }

    triggers {
        pollSCM('* * * * *')  // Polls Git repo every minute 
    }

    stages {
        stage('Checkout') {
            steps {
                echo "📥 Checking out code..."
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "🔧 Building the project..."
                bat "mvn clean install"
            }
        }

        stage('Test') {
            steps {
                echo "🧪 Running tests..."
                bat "mvn test"
            }
        }
    }

    post {
        success {
            echo "✅ Build and tests succeeded!"
        }
        failure {
            echo "❌ Build or tests failed."
        }
    }
}
